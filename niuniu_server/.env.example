# ============================================================================
# Redis 配置
# ============================================================================
REDIS_PASSWORD=niuniu123
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# MySQL 配置
# ============================================================================
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=niuniu
MYSQL_PASSWORD=niuniu123
MYSQL_DATABASE=niuniu
MYSQL_HOST=localhost
MYSQL_PORT=3306

# ============================================================================
# 服务器配置
# ============================================================================
NODE_ENV=production
LOG_LEVEL=info

# 登录服务器端口
LOGIN_SERVER_PORT=3001

# 游戏厅服务器端口
HALL_SERVER_PORT=3002

# 牛牛游戏服务器端口
GAME_SERVER_PORT=3000

# ============================================================================
# Grafana 配置
# ============================================================================
GRAFANA_PASSWORD=admin123

# ============================================================================
# 监控配置
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# 性能配置
# ============================================================================
# 最大连接数
MAX_CONNECTIONS=1000

# 连接池大小
CONNECTION_POOL_SIZE=50

# 请求超时（毫秒）
REQUEST_TIMEOUT=30000

# ============================================================================
# 日志配置
# ============================================================================
LOG_DIR=./logs
LOG_MAX_SIZE=10M
LOG_MAX_FILES=10
